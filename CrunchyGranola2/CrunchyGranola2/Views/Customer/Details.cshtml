@model CrunchyGranola2.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfLastPurchase)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfLastPurchase)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Purchases)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var item in Model.Purchases)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Quantity)
                        </td>
                    </tr>

                }
            </table>
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
